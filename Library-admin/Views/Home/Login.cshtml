
@model DAL.DBContext.Employee
@{
    ViewBag.Title = "Home Page";
    Layout = null;
}
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")



@{
    ViewBag.Title = "LogIn";
}



@using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @clas = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="col-md-3 col-md-offset-0">
        <h2>Login</h2>
        <div class="form-group mb-4">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control " } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group mb-4">
            @Html.LabelFor(m => m.Password, "Password", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Login" class="btn btn-default" />
                @if (ViewBag.Notification != null)
                { 
                    <div class="alert alert-danger">
                        <span class="text-danger">@ViewBag.Notification</span>
                    </div>
                    }
            </div>

        </div>
    </div>
}

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")